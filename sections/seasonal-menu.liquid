<div>
    <div class="seasonal-container">
        {% for menu in section.blocks %}
    <div class="seasonal-image-container">
        {% if menu.settings.photo %}
        <img class="seasonal-image" src="{{ menu.settings.photo | img_url: 'large' }}" alt="Seasonal treat">
        {% endif %}
    </div>
    <div class="seasonal-text">
        <div class="heading-container">
        <h1 class="seasonal-heading">{{ menu.settings.heading }}</h1>
        </div>
        <div class="paragraph-container">
        <p class="seasonal-paragraph">{{ menu.settings.paragraph }}</p>
        </div>
</div>
{% endfor %}
</div>

<style>

    h1 {
        margin-top: 12.5px;
        padding-top: 0px;
        margin-right: 0px;
        margin-left: 0px;
        padding-right: 0px;
        padding-left: 0px;
    }

    p {
        padding: 0px;
        margin-top: 5px;
        margin-left: 0px;
        margin-right: 0px;
        margin-bottom: 0px;
    }

    .seasonal-container {
        padding-top: 30px;
        padding-bottom: 30px;
    }

    .seasonal-text {
        padding-bottom: 30px;
    }

    .custom-menu-paragraph {
        font-family: 'Lato', sans-serif;
        margin-left: 0px;
        margin-right: 0px;
        padding-left: 0px;
        padding-right: 0px;
    }

    .seasonal-paragraph > p {
    margin-top: 0px;
    padding-top: 0px;
    margin-right: 0px;
    margin-left: 0px;
    padding-right: 0px;
    padding-left: 0px;
}

    @media screen and (max-width: 375px) {
        .page-width {
        padding-bottom: 20px;
    }
}

@media screen and (min-width: 491px) {

}
</style>

{% schema %}
{
    "name" : "Seasonal Menu",
    "class" : "seasonal-menu-section",
    "settings" : [
    {
        "id" : "title",
        "type" : "text",
        "label" : "Section Title",
        "default" : "Default"
    }
],
"blocks" : [
    {
        "name" : "Paragraphs",
        "type" : "menu-description",
        "settings" : [
        {
            "id" : "photo",
            "type" : "image_picker",
            "label" : "Photo"
        },
        {
            "id" : "heading",
            "type" : "text",
            "label" : "Write your heading"
        },
        {
            "id" : "paragraph",
            "type" : "richtext",
            "label" : "Write Your Paragraph"
        }
      ]
    }
  ]
}
{% endschema %}